<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".child_config.AddChildren">


    <ImageView
        android:id="@+id/addPortrait"
        android:layout_width="131dp"
        android:layout_height="136dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="65dp"
        android:contentDescription="@string/portrait_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/add_icon" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="259dp"
        android:layout_height="49dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPortrait">

        <EditText
            android:id="@+id/childNameAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints="hello"
            android:hint="@string/add_your_child_name_here"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



