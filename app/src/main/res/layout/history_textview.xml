<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gameResult"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="16dp"
        android:text="@string/game_result"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="346dp"
        android:layout_height="23dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="@string/time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameResult" />

    <ImageView
        android:id="@+id/coinDetails"
        android:layout_width="68dp"
        android:layout_height="62dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/time"
        app:layout_constraintEnd_toStartOf="@+id/gameResult"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/image_of_coins_FlipCoinActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>