<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/player1Info"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="14dp"
        android:text="Player 1 information"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameResult" />

    <TextView
        android:id="@+id/gameResult"
        android:layout_width="298dp"
        android:layout_height="60dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="16dp"
        android:text="Game result"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2Info"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="14dp"
        android:text="Player 1 information"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Info" />

    <TextView
        android:id="@+id/time"
        android:layout_width="298dp"
        android:layout_height="20dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="14dp"
        android:text="Time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2Info" />
</androidx.constraintlayout.widget.ConstraintLayout>